FROM python:3.10-slim

WORKDIR /code

RUN apt-get update && apt-get install -y build-essential curl && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Add this to copy your data into the container
COPY app/stocks_data/nifty_500_lst.csv ./stocks_data/nifty_500_lst.csv

# ðŸ‘‡ Set PYTHONPATH to allow `app.` imports
ENV PYTHONPATH="${PYTHONPATH}:/code"

# ðŸ‘‡ Fix: use app.backend_main instead of backend_main
CMD ["uvicorn", "app.backend_main:app", "--host", "127.0.0.1", "--port", "8000"]
#CMD ["uvicorn", "app.backend_main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]


